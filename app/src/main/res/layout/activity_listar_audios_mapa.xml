<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ListarAudiosMapaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="7" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="5"
            android:textSize="20sp"
            android:text="Nome do audio"
            android:id="@+id/txtViewAudioNoMapaNomeAudio"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:text="Lat: -29.73305"
            android:id="@+id/txtViewAudioNoMapaLatitude"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20sp"
        android:weightSum="7" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:text="2019-11-22 22:50:00"
            android:id="@+id/txtViewAudioNoMapaDataHora"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:text="Lon: -52.41444"
            android:id="@+id/txtViewAudioNoMapaLongitude"
            />
    </LinearLayout>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:id="@+id/webViewMapaAudios"
        />

</LinearLayout>